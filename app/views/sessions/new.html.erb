<div class="container mt-5">
  <div class="card-deck text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">ログイン画面</h4>
      </div>
      <div class="card-body">
        <%= form_with url: login_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control mb-4', required: true %>
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control mb-4', required: true %>
          </div>

          <div class="form-group">
            <%= f.submit "ログイン", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
