<div class="container mt-5 col-8 col-md-8 col-lg-4">
  <%= form_with(model: @user, local: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control mb-4" %>
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control mb-4" %>
    <%= f.submit "保存", class: "btn btn-primary btn-block" %>
  <% end %>
</div>